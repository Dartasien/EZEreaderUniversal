<Page
    x:Class="EZEreaderUniversal.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EZEreaderUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Grid.Row="0"
                    Orientation="Vertical"
                    Margin="10, 10, 10, 10">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap"
                       Text="EZEREADER" VerticalAlignment="Top"
                       Style="{StaticResource HeaderTextBlockStyle}"
                       Margin="0, 0, 0, 0" FontSize="14"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap"
                       Text="My Library" VerticalAlignment="Top"
                       Style="{StaticResource SubheaderTextBlockStyle}" />
        </StackPanel>
        <Grid Grid.Row="1" Margin="10,84,10,10">
            <ListView
                x:Name="LibraryListView"
                Margin="15, 0, 15, 0"
                Tapped="LibraryListView_Tapped_1"
                SelectionChanged="LibraryListView_SelectionChanged"
                IsItemClickEnabled="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ListViewItem
                            Tapped="LibraryListView_Tapped"
                            RightTapped="LibraryListView_RightTapped">
                            <Grid Height="100">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding CoverPic}" Grid.Column="0" />
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding BookName}" FontSize="24"/>
                                    <TextBlock Text="{Binding AuthorID}" FontSize="16"/>
                                </StackPanel>
                            </Grid>
                        </ListViewItem>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar 
            x:Name="BottomBar">
            <AppBarButton 
                Label="Delete" 
                Icon="Delete"
                Click="DeleteBarButton_Click">
            </AppBarButton>
            <AppBarButton
                Label="Edit"
                Icon="Edit"
                Click="EditBarButton_Click">
                
            </AppBarButton>
        </CommandBar>
    </Page.BottomAppBar>
</Page>